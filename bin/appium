#!/bin/bash

install_appium() {

    # Check for npm
    if type_exists 'npm'; then
        e_header "Installing Appium..."

        # Install appium globally and quietly
        npm install appium --global --quiet

        sudo authorize-ios

        appium-doctor

        [[ $? ]] && e_success "Done"
    else
        printf "\n"
        e_error "Error: npm not found."
        printf "Aborting...\n"
        exit
    fi

}
